#!/bin/bash

. $(dirname $0)/helpers

install_if_needed omdv-bug-report

U=$(whoami)
[ -z "$U" ] && U="$USER"
[ -z "$U" ] && U="$(ls -ld ~ |cut -d' ' -f3)"

FILE="$(pkexec omdv-bug-report -u "$U" |grep '^Please include' |cut -d"'" -f2)"
kdialog --title $"OpenMandriva"  --msgbox  $"Report information has been saved as $FILE"
